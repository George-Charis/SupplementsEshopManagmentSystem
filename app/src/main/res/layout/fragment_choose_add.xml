<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".chooseAdd"
    android:id="@+id/choose_add">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <!--Any child View here, TabLayout for example. This View will NOT be blurred -->

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:backgroundTint="@color/white_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Select insertion"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/addProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add product"
                    android:textColor="@color/white_blue"
                    android:elevation="5dp"
                    android:backgroundTint="#70005acd"
                    />

                <Button
                    android:id="@+id/addSupplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_blue"
                    android:text="Add supplier"
                    android:elevation="5dp"
                    android:backgroundTint="#70005acd"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </eightbitlab.com.blurview.BlurView>
</FrameLayout>